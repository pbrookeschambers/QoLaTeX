%{-- Light/Dark Variants =======================================================
% For now, light and dark variants simply switch the foreground and background
% colours. This may change in the future
\newcommand{\UseColourScheme}[1]{%
\ifcolop@light
\ForEach%
  {,}%
  {%
    \definecolor{\thislevelitem}{HTML}{\csname #1@\thislevelitem\endcsname}%
    \colorlet{\thislevelitem_1}{\thislevelitem!50!black}
    \colorlet{\thislevelitem_2}{\thislevelitem!75!black}
    \colorlet{\thislevelitem_3}{\thislevelitem!60!white}
    \colorlet{\thislevelitem_4}{\thislevelitem!40!white}
    \colorlet{\thislevelitem_5}{\thislevelitem!20!white}
  }
  {ForegroundColour,Accent1,Accent2,Accent3,Accent4,Accent5,Accent6,Hyperlink,FollowedHyperlink}
  \definecolor{BackgroundColour}{HTML}{\csname #1@BackgroundColour\endcsname}%
  \colorlet{BackgroundColour_5}{BackgroundColour!90!black}
  \colorlet{BackgroundColour_4}{BackgroundColour!75!black}
  \colorlet{BackgroundColour_3}{BackgroundColour!50!black}
  \colorlet{BackgroundColour_2}{BackgroundColour!25!black}
  \colorlet{BackgroundColour_1}{BackgroundColour!10!black}
\else
\ForEach%
  {,}%
  {%
    \definecolor{\thislevelitem}{HTML}{\csname #1@\thislevelitem\endcsname}%
    \colorlet{\thislevelitem_1}{\thislevelitem!50!black}
    \colorlet{\thislevelitem_2}{\thislevelitem!75!black}
    \colorlet{\thislevelitem_3}{\thislevelitem!60!white}
    \colorlet{\thislevelitem_4}{\thislevelitem!40!white}
    \colorlet{\thislevelitem_5}{\thislevelitem!20!white}
  }
  {Accent1,Accent2,Accent3,Accent4,Accent5,Accent6,Hyperlink,FollowedHyperlink}
  % Probably a nicer way to handle this, but does it really matter?
  \definecolor{ForegroundColour}{HTML}{\csname #1@BackgroundColour\endcsname}%
  \definecolor{BackgroundColour}{HTML}{\csname #1@ForegroundColour\endcsname}%
  \colorlet{ForegroundColour_5}{ForegroundColour!90!white}
  \colorlet{ForegroundColour_4}{ForegroundColour!75!white}
  \colorlet{ForegroundColour_3}{ForegroundColour!50!white}
  \colorlet{ForegroundColour_2}{ForegroundColour!25!white}
  \colorlet{ForegroundColour_1}{ForegroundColour!10!white}
  \colorlet{BackgroundColour_1}{BackgroundColour!50!black}
  \colorlet{BackgroundColour_2}{BackgroundColour!75!black}
  \colorlet{BackgroundColour_3}{BackgroundColour!60!white}
  \colorlet{BackgroundColour_4}{BackgroundColour!40!white}
  \colorlet{BackgroundColour_5}{BackgroundColour!20!white}
\fi
}
